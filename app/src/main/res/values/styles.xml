<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DatePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/orange</item>
        <item name="colorOnPrimary">@color/orange</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">@color/orange</item>
        <item name="boxStrokeColor">@color/text_input_layout_stroke_color</item>
        <item name="boxStrokeErrorColor">@color/red</item>
        <item name="android:textColorHint">@color/gray_3</item>
        <item name="android:buttonCornerRadius">1dp</item>
        <item name="boxCornerRadiusTopStart">1dp</item>
        <item name="boxCornerRadiusTopEnd">1dp</item>
        <item name="boxCornerRadiusBottomStart">1dp</item>
        <item name="boxCornerRadiusBottomEnd">1dp</item>
    </style>

    <style name="ThemeOverlay.AppTheme.TextInputEditText.Outlined" parent="">
        <item name="colorControlActivated">@color/orange</item>
    </style>

    <style name="FullScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="HelperTextFieldStyle">
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textSize">@dimen/text_size_10</item>
    </style>

    <style name="ErrorTextFieldStyle">
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textSize">@dimen/text_size_10</item>
    </style>

    <style name="cardsTabStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/transparent</item>
        <item name="tabSelectedTextColor">@color/orange</item>
        <item name="tabRippleColor">@color/gray_3</item>
        <item name="tabIndicatorFullWidth">true</item>
        <item name="tabTextAppearance">@style/mediaTabTextAppearance</item>
    </style>

    <style name="mediaTabTextAppearance">
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/gray_3</item>
        <item name="android:textSize">@dimen/text_size_12</item>
    </style>

    <style name="BottomSheetStyle">
        <item name="android:background">@drawable/rounded_rectangle</item>
    </style>

    <style name="BottomSheetRectangleStyle">
        <item name="android:background">@drawable/bottom_sheet_rectangle</item>
    </style>

    <style name="PaymentTypeOptionsBottomSheetStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/gray_3</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:paddingStart">15dp</item>
    </style>
</resources>