<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/accountContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?selectableItemBackground"
    android:clickable="true"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/accountImage"
        android:layout_width="@dimen/_45dp"
        android:layout_height="@dimen/_28dp"
        android:layout_marginVertical="@dimen/_15dp"
        android:layout_marginStart="@dimen/_15dp"
        android:layout_marginEnd="@dimen/_15dp"
        android:src="@drawable/bank_account"
        android:scaleType="fitCenter"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_66dp"
        android:layout_marginEnd="@dimen/_44dp"
        android:layout_marginTop="@dimen/_14dp"
        android:layout_marginBottom="@dimen/_14dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/accountNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_medium"
            android:ellipsize="end"
            android:maxLines ="1"
            tools:text="Account number" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/balance_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:layout_weight="1"
                android:maxLines ="1"
                tools:text="1000$" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
