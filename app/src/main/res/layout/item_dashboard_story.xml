<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/story_card"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:elevation="@dimen/_4dp"
    android:layout_margin="@dimen/_5dp"
    app:cardCornerRadius="@dimen/_0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/story_drawable"
            android:layout_width="@dimen/_100dp"
            android:layout_height="@dimen/_100dp"
            android:scaleType="centerCrop"
            tools:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/story_label"
            android:layout_width="@dimen/_0dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/story_drawable"
            android:layout_alignBottom="@id/story_drawable"
            android:layout_alignEnd="@id/story_drawable"
            android:layout_margin="@dimen/_10dp"
            android:textSize="@dimen/text_size_10"
            android:textColor="@color/gray_2"
            android:fontFamily="@font/inter_medium"
            tools:text="Текст истории" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
